<section class="container profile">
  <div class="profile__cont">
    <div class="profile__cont__img">
      <img
        src="../img/jacg.png"
        class="profile__img"
        alt="Profile"
        width="100"
        height="100"
      />
      <span class="profile__name" id="userNameProfile"></span>
    </div>
    <div class="profile__cont__descrip">
      <p class="profile__descrip">
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Optio facilis
        minima natus, necessitatibus quae.
      </p>
    </div>
    <button type="button" class="btn btn__send" id="addProduct">AÃ±adir producto</button>
  </div>
  <div class="products products__user" id="productList">
    {{#each userProducs}}
      <div class="product__item">
        <div class="product__info">
          <span class="product__name">{{{name}}}</span>
          <p class="product__descrip">{{{descrip}}}</p>
        </div>
        <div class="product__actions">
          <button
            class="btn btn-edit"
            type="button"
            data-name="{{{id_product}}}"
            data-action="edit"
          >Editar</button>
          <button
            class="btn btn-delet"
            type="button"
            data-name="{{{id_product}}}"
            data-action="delete"
          >Eliminar</button>
        </div>

        <div>
          <span>Puntuacion del Producto {{{rating}}}/5</span>
        </div>

      </div>
    {{/each}}

  </div>
</section>
<script src="/js/user/user.js" type="module"></script>
