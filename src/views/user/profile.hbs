<section class="container profile">
  <div class="profile__cont">
    <div class="edit__profile__cont">
      <button type="button" class="btn btn-edit" data-btn="editProfile"><i
          data-btn="editProfile"
          class="fa-solid fa-pencil"
        ></i></button>
    </div>
    <div class="profile__cont__img">
      <img
        src="../img/jacg.png"
        class="profile__img"
        alt="Profile"
        width="100"
        height="100"
      />
      <span
        class="profile__name"
        id="userNameProfile"
      >{{{userInfo.nombreApellido}}}</span>
    </div>
    <div class="profile__cont__descrip">
      <p class="profile__descrip" id="userDescripProfile">
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Optio facilis
        minima natus, necessitatibus quae.
      </p>
    </div>
    <button type="button" class="btn btn__send" id="addProduct">AÃ±adir producto</button>
  </div>
  <div class="products products__user" id="productList">
    {{#each userProducs}}
      <div class="product__item" data-card="{{{@index}}}">
        <input type="hidden" value="{{{dataValues.descrip}}}" />
        <div class="product__info">
          <span class="product__name">{{{dataValues.name}}}</span>
          <p class="product__descrip">{{{dataValues.descripCut}}}</p>
        </div>
        <div class="product__actions">
          <button
            class="btn btn-edit"
            type="button"
            data-name="{{{dataValues.id_product}}}"
            data-action="edit"
          >Editar</button>
          <button
            class="btn btn-delet"
            type="button"
            data-name="{{{dataValues.id_product}}}"
            data-action="delete"
          >Eliminar</button>
        </div>

        <div class="rating__result">
          <span>Puntuacion del Producto {{{dataValues.rating}}}/5</span>
        </div>

      </div>
    {{/each}}

  </div>
</section>
<script src="/js/user/user.js" type="module"></script>
